<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>


<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Button text="Отправить" GridPane.rowIndex="10" GridPane.columnIndex="1" onAction="#clickSend"/>
    <TextArea fx:id="textarea" GridPane.rowIndex="0" GridPane.columnIndex="0" prefHeight="300" prefWidth="500" />
    <TextField fx:id="textfield" GridPane.rowIndex="10" GridPane.columnIndex="0" onAction="#clickSend"/>
</GridPane>